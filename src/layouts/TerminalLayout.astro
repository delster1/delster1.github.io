---
import "../styles/global.css";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title ?? "Terminal"}</title>
  </head>

  <body class="bg-[var(--terminal-bg)] text-[var(--terminal-text)] font-mono min-h-screen p-4">
    <div class="max-w-4xl mx-auto">
      <slot />
    </div>
  </body>
</html>

